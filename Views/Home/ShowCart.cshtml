@model CartViewModel
@{
    ViewData["Title"] = "سبد خرید";
}


<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>کالا</th>
            <th>تعداد</th>
            <th>قیمت</th>
            <th>دستورات</th>
        </tr>
    </thead>

    <tbody class="">
        @foreach (var item in Model.Cartitem)
        {
            <tr>
                <td>@item.Item.product.Name</td>
                <td>@item.Quantity</td>
                <td>@item.getTotalPrice()</td>
                @if (item.Quantity == 1)
                {
                    <td>
                        <a class="btn btn-danger" asp-action="RemoveFromCart" asp-controller="Home" asp-route-itemId="@item.Item.Id">حذف</a>
                    </td>
                }
                else
                {
                    <td>
                        <a class="btn btn-danger" asp-action="RemoveFromCart" asp-controller="Home" asp-route-itemId="@item.Item.Id">-</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
<h5>جمع کل :@Model.OrderTotal</h5>